<!DOCTYPE html>
<html lang="sk">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="X-Xss-Protection" content="1; mode=block" />
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="alternate" type="application/rss+xml"  title="RSS Feed"  href="@Context.GetLink("feed.rss")" />
    <link rel="alternate" type="application/atom+xml"  title="Atom Feed"  href="@Context.GetLink("feed.atom")" />

    <title>@Model.GetString("Title")</title>
    <meta name="author" content="harrison314" />
    <meta property="description" content="@Model.GetString("Description")" />

    <meta property="og:title" content="@Model.GetString("Title")" />
    <meta property="og:description" content="@Model.GetString("Description")" />
    <meta property="og:url" content="@Context.GetLink(Model.GetString("Destination"), true)" />
    @if (Model.ContainsKey("OgImage"))
    {
        <meta property="og:image" content="@Context.GetLink(Model.GetString("OgImage"), true)" />
    }

    <!-- Bootstrap Core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <!-- <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous"> -->
    <!-- Custom CSS -->
    <link href="~/css/blog-post.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    @if (Model.GetBool("UseMathjax"))
    {
        @*
            http://docs.mathjax.org/en/latest/tex.html#tex-support
            When $a \ne 0$, there are two solutions to \(ax^2 + bx + c = 0\) and they are
            $$x = {-b \pm \sqrt{b^2-4ac} \over 2a}.$$
        *@
        <script type="text/x-mathjax-config">
            MathJax.Hub.Config({tex2jax: {inlineMath: [['$','$'], ['\\(','\\)']]}});
        </script>
        <script type="text/javascript" async
                src="https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-MML-AM_CHTML">
        </script>
    }
    @if (Model.GetBool("UseHighiler"))
    {
        @* FROM:  https://highlightjs.org/ *@
        <link rel="stylesheet" href="~/css/highlightjs/vs.css" />
    }

    <style>
        img {
            max-width: 100%;
        }

        .img-center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }
    </style>
</head>
<body>
    @Html.Partial("_Navbar")

    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8">
                @if (Model.GetBool("IsBlogPost"))
                {
                    @Html.Partial("_postTemplate")
                }

                @RenderBody()
            </div>
            <div class="col-lg-4 col-md-4 hidden-xs hidden-sm">
                @{
                    var allDocs = Context.Outputs.FromPipeline("BlogPipeline")
                        .Where(x => x.GetString("Published") != null)
                        .OrderByDescending(x => DateTime.Parse(x.GetString("Published")))
                        .ToList();
                }
                <div class="well">
                    <h4>Vývoj</h4>
                    <div class="row">
                        <div class="col-lg-12">
                            <ul class="list-unstyled">
                                @foreach (var doc in allDocs.Where(t => string.Equals("Dev", t.Get("Cathegory", null))).Take(10))
                                {
                                    <li>
                                        <a href="@Context.GetLink(@doc["Destination"].ToString(), Model.GetBool("GS.UseAbsoluteUrls"))">@doc["Menu"]</a>
                                    </li>
                                }
                                <li>
                                    <a href="@Context.GetLink("DevelopingAll.html", Model.GetBool("GS.UseAbsoluteUrls"))">&#8230;</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="well">
                    <h4>Všeobecné</h4>
                    <div class="row">
                        <div class="col-lg-12">
                            <ul class="list-unstyled">
                                @foreach (var doc in allDocs.Where(t => string.Equals("Generally", t.Get("Cathegory", null))).Take(10))
                                {
                                    <li>
                                        <a href="@Context.GetLink(@doc["Destination"].ToString(), Model.GetBool("GS.UseAbsoluteUrls"))">@doc["Menu"]</a>
                                    </li>
                                }
                                <li>
                                    <a href="@Context.GetLink("GeneralAll.html", Model.GetBool("GS.UseAbsoluteUrls"))">&#8230;</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="well">
                    <h4>O mne</h4>
                    <div class="row">
                        <div class="col-lg-12">
                            <ul class="list-unstyled">
                                @foreach (var doc in allDocs.Where(t => string.Equals("Aboutme", t.Get("Cathegory", null))).Take(10))
                                {
                                    <li>
                                        <a href="@Context.GetLink(@doc["Destination"].ToString(), Model.GetBool("GS.UseAbsoluteUrls"))">@doc["Menu"]</a>
                                    </li>
                                }

                                <li><a href="@Context.GetLink("Portfolio.html", Model.GetBool("GS.UseAbsoluteUrls"))">Portólio</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                @* end right menu *@
            </div>
        </div>
        <hr>

        <!-- Footer -->
        <footer>
            @if (Model.GetString("IssueUrl") != null)
            {
                <div class="row">
                    <div class="col-lg-8 col-sm-8">
                        <div class="well">
                            <h4>Našli ste chybu, alebo chcete niečo doplniť?</h4>
                            <p>
                                Ak ste našli chybu v článu, chcete niečo dopniť, alebo sa vyjadriť k téme,
                                môžete na <a href="@Model.GetString("IssueUrl")" target="_blank">Githube otvoriť issue</a>.
                            </p>
                        </div>
                    </div>
                </div>
            }
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; harrison314 2013</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>

    </div>
    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>
